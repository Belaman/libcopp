# =========== libcopp/src - fcontext : i386 - ms - pe masm =========== 
set(PROJECT_LIBCOPP_FCONTEXT_BIN_DIR_WINPATH "${PROJECT_LIBCOPP_FCONTEXT_BIN_DIR}")
set(PROJECT_LIBCOPP_FCONTEXT_ASM_DIR_WINPATH "${PROJECT_LIBCOPP_FCONTEXT_ASM_DIR}")
if(CYGWIN)
	execute_process (
        COMMAND cygpath -w "${PROJECT_LIBCOPP_FCONTEXT_BIN_DIR}" 
        WORKING_DIRECTORY "${PROJECT_LIBCOPP_FCONTEXT_BIN_DIR_WINPATH}"
		OUTPUT_VARIABLE PROJECT_LIBCOPP_FCONTEXT_BIN_DIR_WINPATH
    )
	
	execute_process (
        COMMAND cygpath -w "${PROJECT_LIBCOPP_FCONTEXT_ASM_DIR}" 
        WORKING_DIRECTORY "${PROJECT_LIBCOPP_FCONTEXT_ASM_DIR_WINPATH}"
		OUTPUT_VARIABLE PROJECT_LIBCOPP_FCONTEXT_ASM_DIR_WINPATH
    )
endif()
	
if(MSVC)
	list(APPEND COPP_SRC_LIST "${PROJECT_LIBCOPP_FCONTEXT_ASM_DIR_WINPATH}/jump_i386_ms_pe_masm.asm" "${PROJECT_LIBCOPP_FCONTEXT_ASM_DIR_WINPATH}/make_i386_ms_pe_masm.asm")
	set(MASMFound FALSE)
	enable_language(ASM_MASM)
	if(CMAKE_ASM_MASM_COMPILER_WORKS)
		SET(MASMFound TRUE)
	else()
		EchoWithColor(COLOR RED "-- enable masm failed")
		message(FATAL_ERROR "enable ASM_MASM failed")
	endif(CMAKE_ASM_MASM_COMPILER_WORKS)
else()
	execute_process (
        COMMAND "${LIBCOPP_FCONTEXT_AS_TOOL}" /c /Fo"${PROJECT_LIBCOPP_FCONTEXT_BIN_DIR_WINPATH}/${PROJECT_LIBCOPP_FCONTEXT_BIN_NAME_MAKE}" 
		"${PROJECT_LIBCOPP_FCONTEXT_ASM_DIR_WINPATH}/make_i386_ms_pe_masm.asm"
        WORKING_DIRECTORY "${PROJECT_LIBCOPP_FCONTEXT_BIN_DIR_WINPATH}"
    )
	
	execute_process (
        COMMAND "${LIBCOPP_FCONTEXT_AS_TOOL}" /c /Fo"${PROJECT_LIBCOPP_FCONTEXT_BIN_DIR_WINPATH}/${PROJECT_LIBCOPP_FCONTEXT_BIN_NAME_JUMP}" 
		"${PROJECT_LIBCOPP_FCONTEXT_ASM_DIR_WINPATH}/jump_i386_ms_pe_masm.asm"
        WORKING_DIRECTORY "${PROJECT_LIBCOPP_FCONTEXT_BIN_DIR_WINPATH}"
    )
	
	list(APPEND COPP_SRC_LIST "${PROJECT_LIBCOPP_FCONTEXT_BIN_DIR_WINPATH}/${PROJECT_LIBCOPP_FCONTEXT_BIN_NAME_JUMP}" "${PROJECT_LIBCOPP_FCONTEXT_BIN_DIR_WINPATH}/${PROJECT_LIBCOPP_FCONTEXT_BIN_NAME_MAKE}")
endif()
